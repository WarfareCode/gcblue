        <text value="ElectricalLoadAdjustment_kWps" label="Battery_Load_Adjustment_Kwps" proportion="0"></text>
        <checkbox value="IsAIP" label="Has_AIP" proportion="0"></checkbox>
        <text value="AIP_ShaftHP" label="AIP_HP" proportion="0"></text>
        <text value="AIP_Accel_ktsps" label="AIP_Accel_ktsps" proportion="0"></text>
        <text value="AIP_Capacity_kg" label="AIP_Capacity_kg" proportion="0"></text>
        <text value="AIP_Rate_kgps" label="AIP_Rate_kgps" proportion="0"></text>
    </sizer>
    <sizer orientation="vertical" proportion="1">
        <text value="EffectiveHeight_m" label="EffectiveHeight_m" proportion="0"></text>
        <combobox value="DamageEffect" label="Survivability" proportion="0" update_table="damage_effect"></combobox>
        <text value="RCS_dBsm" label="RCS_dBsm" proportion="0"></text>
        <combobox value="RCS_Model" label="RCS Pattern" proportion="0" update_table="signature"></combobox>
        <text value="OpticalCrossSection_dBsm" label="OpticalCrossSection_dBsm" proportion="0"></text>
        <text value="IRSignature_dB" label="IRSignature_dB" proportion="0"></text>
        <combobox value="IR_ModelA" label="IR Pattern (surfaced)" proportion="0" update_table="signature"></combobox>
        <combobox value="IR_ModelB" label="IR Pattern (snorkling)" proportion="0" update_table="signature"></combobox>
        <text value="TS" label="TS" proportion="0"></text>
        <combobox value="TS_Model" label="TS Pattern" proportion="0" update_table="signature"></combobox>
        <combobox value="AcousticModel" label="Acoustic Model" proportion="0" update_table="acoustic_noise"></combobox>
        <combobox value="SL_Model" label="SL Pattern" proportion="0" update_table="signature"></combobox>
