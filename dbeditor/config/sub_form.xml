    <sizer orientation="vertical" proportion="1">
        <text value="SurfaceSpeed_kts" label="SurfaceSpeed_kts" proportion="0"></text>
        <text value="MaxSpeed_kts" label="MaxSpeed_kts" proportion="0"></text>
        <text value="TurnRate_degps" label="TurnRate_degps" proportion="0"></text>
        <text value="MaxDepth_m" label="MaxDepth_m" proportion="0"></text>
        <text value="PropulsionShafts" label="PropulsionShafts" proportion="0"></text>
        <text value="Primary_ShaftHP" label="Diesel/Nuclear_HP" proportion="0"></text>
        <text value="FuelCapacity_kg" label="FuelCapacity_kg" proportion="0"></text>
        <text value="FuelRate_kgps" label="FuelRate_kgps" proportion="0"></text>
        <text value="Accel_ktsps" label="Diesel/Nuke_Accel_Ktps" proportion="0"></text>
        <checkbox value="IsDieselElectric" label="IsDieselElectric" proportion="0"></checkbox>
        <text value="Electric_ShaftHP" label="Electrical_HP" proportion="0"></text>
        <text value="Electrical_Accel_ktsps" label="Electrical_Accel_ktsps" proportion="0"></text>
        <text value="BatteryCapacity_kJ" label="BatteryCapacityRated_kWhr" proportion="0"></text>
        <text value="BatteryRatedHours" label="BatteryRatedHours" proportion="0"></text>
        <text value="BatteryRate_kW" label="BatteryRate_kWps" proportion="0"></text>
        <text value="BatteryPeukert" label="Battery_Peukert_Constant" proportion="0"></text>
